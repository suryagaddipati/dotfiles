{
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model_name=$(echo \"$input\" | jq -r '.model.display_name' | sed 's/@.*//'); tokens=$(echo \"$input\" | jq -r '.usage.tokens // 0'); tokens_k=$(echo \"scale=1; $tokens/1000\" | bc 2>/dev/null || echo \"0\"); printf \"%s [%sk]\" \"$model_name\" \"$tokens_k\""
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/claude-activity-tracker.sh notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/claude-activity-tracker.sh stop"
          }
        ]
      }
    ],

    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/claude-activity-tracker.sh stop"
          }
        ]
      }
    ],

    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/claude-activity-tracker.sh stop"
          }
        ]
      }
    ],

    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/claude-activity-tracker.sh stop"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(mise:*)",
      "Bash(just:*)",
      "Bash(rm:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(nvim:*)",
      "Bash(vim:*)",
      "Bash(git:*)",
      "Bash(pkill:*)",
      "Bash(open:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(ln:*)",
      "Bash(mv:*)",
      "Bash(tmux:*)",
      "Bash(~/.tmux/plugins/tpm/scripts/install_plugins.sh)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(true)",
      "Bash(source:*)",
      "Bash(echo:*)",
      "Bash(fc-list:*)",
      "Bash(touch:*)",
      "Bash(fzf:*)",
      "Bash($FZF_DEFAULT_COMMAND)",
      "Bash(sh -c \"$FZF_DEFAULT_COMMAND\")",
      "Bash(fd:*)",
      "Bash(bash:*)",
      "Bash(bash ~/.claude/claude-activity-tracker.sh:*)",
      "Bash(brew install:*)",
      "Bash(~/.local/bin/cs:*)",
      "Bash(java:*)",
      "Bash(chmod:*)",
      "Bash(/Users/suryag/code/dotfiles/test-metals.sh:*)",
      "Bash(pip install:*)",
      "Bash(npm install:*)",
      "Bash(/Users/suryag/.local/share/mise/installs/stylua/2.1.0/stylua test_format.lua)",
      "Bash(acli:*)",
      "Bash(slack auth:*)",
      "Bash(curl:*)",
      "Bash(backstagecli:*)",
      "Bash(gh:*)",
      "Bash(/Users/suryag/code/dotfiles/git-commands/*)",
      "Bash(~/code/dotfiles/git-commands/*)",
      "Bash(./git-commands/*)",
      "Bash(/tmp/*.sh:*)",
      "Bash([ -d ~/.tmux/plugins/tpm ])",
