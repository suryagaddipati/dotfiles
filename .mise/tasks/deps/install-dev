#!/usr/bin/env bash
#MISE description="Install development tools using mise"
#MISE depends=["deps:install"]

set -euo pipefail

printf "${BLUE}Installing development tools with mise...${NC}\n"
if command -v mise > /dev/null 2>&1; then
    printf "${YELLOW}Installing tools from mise config...${NC}\n"
    mise install
    printf "${GREEN}Development tools installed via mise!${NC}\n"
else
    printf "${RED}mise not found. Run 'mise run deps:install-mise' first.${NC}\n"
    exit 1
fi